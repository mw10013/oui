{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "oui-switch-demo",
  "type": "registry:component",
  "registryDependencies": [
    "@oui/oui-switch",
    "@oui/oui-field"
  ],
  "files": [
    {
      "path": "registry/default/components/oui-switch-demo.tsx",
      "content": "\"use client\";\n\nimport {\n  Field,\n  FieldContent,\n  FieldDescription,\n  FieldGroup,\n  FieldLabel,\n  FieldSwitch,\n  FieldTitle,\n} from \"@/registry/default/ui/oui-field\";\nimport { Switch } from \"@/registry/default/ui/oui-switch\";\nimport { twJoin } from \"tailwind-merge\";\n\nexport default function Component() {\n  return (\n    <div className=\"w-full max-w-md\">\n      <FieldGroup>\n        <FieldSwitch>\n          <FieldContent>\n            <FieldLabel>Multi-factor authentication</FieldLabel>\n            <FieldDescription>\n              Enable multi-factor authentication.\n            </FieldDescription>\n          </FieldContent>\n          <Switch />\n        </FieldSwitch>\n        <FieldGroup>\n          <Field>\n            <Switch>Airplane Mode</Switch>\n          </Field>\n          <Field>\n            <Switch isDisabled>Security emails</Switch>\n          </Field>\n          <Field>\n            <Switch\n              defaultSelected\n              className=\"**:data-[slot=switch-indicator]:group-data-selected:bg-blue-500 **:data-[slot=switch-indicator]:dark:group-data-selected:bg-blue-600\"\n            >\n              Bluetooth\n            </Switch>\n          </Field>\n        </FieldGroup>\n        <Switch defaultSelected>\n          <FieldContent>\n            <FieldTitle>Share across devices</FieldTitle>\n            <FieldDescription>\n              Focus is shared across devices, and turns off when you leave the\n              app.\n            </FieldDescription>\n          </FieldContent>\n        </Switch>\n        <Switch\n          defaultSelected\n          className={twJoin(\n            \"flex-row-reverse\",\n            \"data-selected:border-blue-600 data-selected:bg-blue-50 dark:data-selected:border-blue-900 dark:data-selected:bg-blue-950\",\n            \"**:data-[slot=switch-indicator]:group-data-selected:bg-blue-500 **:data-[slot=switch-indicator]:dark:group-data-selected:bg-blue-600\",\n          )}\n        >\n          <FieldContent>\n            <FieldTitle>Share across devices</FieldTitle>\n            <FieldDescription>\n              Focus is shared across devices, and turns off when you leave the\n              app.\n            </FieldDescription>\n          </FieldContent>\n        </Switch>\n      </FieldGroup>\n    </div>\n  );\n}\n",
      "type": "registry:component"
    }
  ],
  "meta": {
    "tags": [
      "switch",
      "field",
      "disabled"
    ],
    "canPreview": true,
    "canOpenInV0": true
  }
}